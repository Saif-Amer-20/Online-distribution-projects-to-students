@using ProjectManagement.Data
@model ProjectManagement.DataContextModels.Project
@inject ApplicationDbContext _Context;

@{
    ViewData["Title"] = "Edit";
}
<script type="text/javascript">
    $(document).ready(function () {

        if ($('#ProjectType').val() != 'Bachelor') {
            $('#ProjectSubType').prop("disabled", "disabled");
        }

        $('#ProjectType').change(function () {
            var ddlsource = "#ProjectType";
            var projectType = $(ddlsource).val();
            if (projectType != 'Bachelor') {
                $('#ProjectSubType').prop("disabled", "disabled");
            }
            else {
                $('#ProjectSubType').removeAttr("disabled");
            }
        });
    });
</script>
<h2>Edit</h2>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjectTools" class="control-label"></label>
                <input asp-for="ProjectTools" class="form-control" />
                <span asp-validation-for="ProjectTools" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectType" class="control-label"></label>
                <select asp-for="ProjectType" class="form-control">
                    <option value="Bachelor">Bachelor</option>
                    <option value="Master">Master</option>
                    <option value="Doctorate">Doctorate</option>
                </select>

                <span asp-validation-for="ProjectType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectSubType" class="control-label"></label>
                <select asp-for="ProjectSubType" class="form-control">
                    <option value="IT">IT</option>
                    <option value="CS">CS</option>
                </select>

                <span asp-validation-for="ProjectType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxApprovedStudents" class="control-label"></label>
                <select asp-for="MaxApprovedStudents" class="form-control">
                    <option value=1>1</option>
                    <option value=2>2</option>
                    <option value=3>3</option>
                    <option value=4>4</option>
                </select>

                <span asp-validation-for="ProjectType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>

                <textarea id="Description" name="Description" class="form-control">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @{   var selectProject = _Context.ProjectStudents.Where(p=>p.ProjectId==Model.Id).Select(c => c.ProjectId).FirstOrDefault();

                if (selectProject == 0)
                {
                    <div class="form-group">
                        <input type="hidden" asp-for="CreatedOn" />
                        <input type="hidden" asp-for="CreatedBy" />
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="text-danger">This project is allocated you can't edit it</label>
                    </div>
                }
            }
           
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
