@model ProjectManagement.Utilities.UserRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<h2>Assign User to Role</h2>

<form asp-action="AssignRole">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UserId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoleId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>

</form>


@{
    if (!string.IsNullOrEmpty(ViewBag.Result))
    {
        <div class="alert alert-success alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> @ViewBag.Result.
        </div>
    }
}

@{
    if (!string.IsNullOrEmpty(ViewBag.Resultexist))
    {
        <div class="alert alert-warning alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Success!</strong> @ViewBag.Resultexist.
        </div>
    }
}

<div>
    <a asp-action="ManageUsers">Back to List</a>
</div>

